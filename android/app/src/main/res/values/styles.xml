<resources>

    <style name="AppTheme.TransparentStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button" parent="Base.TextAppearance.AppCompat.Widget.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="RoundedButton" parent="Base.TextAppearance.AppCompat.Widget.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/button_rounded</item>
    </style>

    <style name="AppTheme.TransparentStatusBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.TransparentStatusBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.TransparentStatusBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
